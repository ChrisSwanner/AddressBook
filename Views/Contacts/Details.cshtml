<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <title></title>
  </head>
  <body>
    <div class="container">
      <h3>Current Details in this contact:</h3>
      <ol>
        @foreach (var item in @Model["items"])
        {
          <li><a href='/contacts/@Model["contact"].GetId()/items/@item.GetId()'>@item.GetDescription()</a></li>
        }
      </ol>
      <hr class="style">
      <form class="inline" action='/contacts/@Model["contact"].GetId()/items/new' method="get">
        <button type="submit" name="button">Add new detail</button>
      </form>
      <form class="inline" action='/contacts' method="get">
        <button type="submit" name="button">Return to Contacts</button>
      </form>
      <form class="inline" action='/' method="get">
        <button type="submit" name="button">Return to Home</button>
      </form>
      <br>
      <br>
      <form action="/items/delete" method="post">
        <button type="submit" name="button">Clear All Items</button>
      </form>
    </div>
  </body>
</html>
